<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.task_2_notes.homefragment.HomeFragment"
        android:label="@string/home_fragment_title"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_displayFolderFragment"
            app:destination="@id/displayFolderFragment" />
        <action
            android:id="@+id/action_homeFragment_to_displayCardFragment"
            app:destination="@id/displayCardFragment" />
        <action
            android:id="@+id/action_homeFragment_to_createFolderFragment"
            app:destination="@id/createFolderFragment" />
        <action
            android:id="@+id/action_homeFragment_to_updateNoteFragment"
            app:destination="@id/updateNoteFragment" />
    </fragment>
    <fragment
        android:id="@+id/displayFolderFragment"
        android:name="com.example.task_2_notes.displayfolder.DisplayFolderFragment"
        android:label="@string/folder_title"
        tools:layout="@layout/fragment_display_folder">
        <action
            android:id="@+id/action_displayFolderFragment_to_displayCardFragment"
            app:destination="@id/displayCardFragment" />
        <argument
            android:name="folder_name"
            app:argType="string"
            android:defaultValue="Default_folder" />
        <action
            android:id="@+id/action_displayFolderFragment_to_updateNoteFragment"
            app:destination="@id/updateNoteFragment" />
    </fragment>
    <fragment
        android:id="@+id/displayCardFragment"
        android:name="com.example.task_2_notes.writeNote.DisplayNoteFragment"
        android:label="@string/add_notes_Title"
        tools:layout="@layout/fragment_display_card" >
        <action
            android:id="@+id/action_displayCardFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment" />
        <action
            android:id="@+id/action_displayCardFragment_to_displayFolderFragment"
            app:destination="@id/displayFolderFragment"
            app:popUpTo="@id/displayFolderFragment" />
        <argument
            android:name="folder_name"
            app:argType="string" />
        <argument
            android:name="type"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/createFolderFragment"
        android:name="com.example.task_2_notes.createfolder.CreateFolderFragment"
        android:label="fragment_create_folder"
        tools:layout="@layout/fragment_create_folder" >
        <action
            android:id="@+id/action_createFolderFragment_to_displayFolderFragment"
            app:destination="@id/displayFolderFragment"
            app:popUpTo="@id/createFolderFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/updateNoteFragment"
        android:name="com.example.task_2_notes.updateNote.UpdateNoteFragment"
        android:label="UpdateNoteFragment" >
        <action
            android:id="@+id/action_updateNoteFragment_to_displayFolderFragment"
            app:destination="@id/displayFolderFragment"
            app:popUpTo="@id/displayFolderFragment" />
        <action
            android:id="@+id/action_updateNoteFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment" />
        <argument
            android:name="uniqueKey"
            app:argType="integer" />
        <argument
            android:name="folder_name"
            app:argType="string" />
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="description"
            app:argType="string" />
        <argument
            android:name="created_time"
            app:argType="long" />
    </fragment>
</navigation>